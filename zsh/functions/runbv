cd $GM_WORK_DIR
echo "Run this after docker container starts: tmux -CC new -A -s foo"
docker run -i \
    --rm \
    -h boinaverde \
    --shm-size=1g \
    --name gm-dev \
    -p80:80 -p443:443 \
    -v $GM_WORK_DIR:/var/www/gamersmafia/current \
    -v ${GM_WORK_DIR}../prod-db/:/var/lib/postgresql \
    gm-dev-ubuntu-22-04:latest