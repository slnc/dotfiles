[user]
	name = slnc
	email = s@slnc.me

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[push]
	default = matching

[alias]
	s = status
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
  hs = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  dt = difftool
  #Â Shows a list of branches sorted by last change. Useful when you have a lot
  # of branches with similar names and you're not sure anymore which branch is
  # the right now.
  brl = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
