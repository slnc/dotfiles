[advice]
  statusHints = false

[alias]
  ac = !git add -A && git commit
  br = !~/.dotfiles/scripts/git-branches.sh
  brgh = !~/.dotfiles/scripts/git-branches.sh gh
  ca = commit -amf
  ci = commit
  co = checkout
  d = diff --ignore-space-at-eol
  ; team
  l = log --graph --pretty=format:'%C(blue)%h%Creset %Cgreen%ad -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %C(cyan)%p%Creset' --abbrev-commit --date=format:'%Y-%m-%d %H:%M'

  ; solo
  ; l = log --graph --pretty=format:'%C(blue)%h%Creset %Cgreen%ad%C(yellow)%d%Creset %s' --abbrev-commit --date=format:"%Y-%m-%d %H:%M"
  lp = log -p
  ls = log --pretty=format:"%h %ad | %s%d %as [%an]" --graph --date=format:"%Y-%m-%d %H:%M"
  pushfwl = push --force-with-lease
  s = status

[branch]
  sort = -committerdate

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[commit]
  gpgsign = true
  verbose = true

[core]
  autocrlf = input
  commitGraph = true
  excludesfile = ~/.dotfiles/.gitignore
  ignorecase = false
  precomposeunicode = true
  quotepath = false

[credential]
  helper = store
  helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
  useHttpPath = true

[diff]
  algorithm = patience
  colorMoved = default
  compactionheuristic = true
  submodule = log
  tool = vimdiff
  wsErrorHighlight = all

[difftool]
  prompt = false

[gpg]
  format = ssh

[help]
  autocorrect = prompt

[init]
  defaultBranch = main

[maintenance]
  auto = true
  strategy = incremental

[merge]
  conflictStyle = zdiff3
  tool = nvimdiff

[mergetool]
  prompt = true

[protocol]
  version = 2

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  default = current
  recurseSubmodules = on-demand

[rerere]
  autoUpdate = true
  enabled = true

[status]
  branch = true
  short = true
  submodulesummary = 1

[submodule]
  recurse = true

[tag]
  sort = -version:refname
