[alias]
  bl = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
  br = branch
  ca = commit -amf
  ci = commit
  co = checkout
  d = diff
  ls = log --pretty=format:\"%h %ad | %s%d %as [%an]\" --graph --date=format:\"%Y-%m-%d %H:%M\"
  lp = log -p
  s = status
	fpush = push

[branch]
	sort = -committerdate

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[column]
	branch = auto

[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  precomposeunicode = true
  quotepath = false

[credential]
	helper = store
	helper = /usr/local/share/gcm-core/git-credential-manager

[diff]
  tool = vimdiff
  wsErrorHighlight = all

[difftool]
  prompt = false

[gpg]
  format = ssh

[pull]
	rebase = true

[push]
	default = current

[rerere]
	enabled = true
	autoUpdate = true

[user]
  name = Juan Alonso
  email = juan@juan.al
  signingKey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHJId+pDH8XWrST0trBUyrumd0gWt+An/Y82CcOMEo4+

[includeIf "gitdir:~/files/projects/b"]
  path = ~/.gitconfig-b

[includeIf "gitdir:~/files/projects/ai-experiments"]
  path = ~/.gitconfig-b

[includeIf "gitdir:/workspaces/ai-experiments"]
  path = ~/.gitconfig-b

[credential "https://dev.azure.com"]
	useHttpPath = true

[commit]
	gpgsign = true
[init]
	defaultBranch = main
