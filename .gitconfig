[user]
	name = slnc
	email = juan@juanalonso.net

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[push]
	default = matching

[alias]
	s = status
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
  hs = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  dt = difftool
  #
  #Â Shows a list of branches sorted by last change. Useful when you have a lot
  # of branches with similar names and you're not sure anymore which branch is
  # the right now.
  ca = commit -amf
  ci = commit
  co = checkout
  d = diff
  l = log -p
  s = status
  bl = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
  dt = difftool
  hs = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
