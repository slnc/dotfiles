[alias]
	br = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)'
  # br = branch -vv --sort=-committerdate
	ca = commit -amf
	ci = commit
	co = checkout
	d = diff --ignore-space-at-eol
	ls = log --pretty=format:\"%h %ad | %s%d %as [%an]\" --graph --date=format:\"%Y-%m-%d %H:%M\"
	lp = log -p
  ; team
  l = log --graph --pretty=format:'%C(blue)%h%Creset %Cgreen%ad -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %C(cyan)%p%Creset' --abbrev-commit --date=format:\"%Y-%m-%d %H:%M\"
  ; solo
  ; l = log --graph --pretty=format:'%C(blue)%h%Creset %Cgreen%ad%C(yellow)%d%Creset %s' --abbrev-commit --date=format:\"%Y-%m-%d %H:%M\"
	s = status
	pushfwl = push --force-with-lease
	unstage = reset HEAD --
	staged = diff --cached

[branch]
	sort = -committerdate

[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto

[core]
	autocrlf = input
	excludesfile = ~/.dotfiles/.gitignore
	commitGraph = true
	precomposeunicode = true
	quotepath = false
  ; pager = delta

;[interactive]
;    diffFilter = delta --color-only

;[delta]
;    navigate = true  # use n and N to move between diff sections
;    dark = true      # or light = true, or omit for auto-detection
;    side-by-side = true

[credential]
	helper = store
	helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
	useHttpPath = true

[commit]
	gpgsign = true

[diff]
	tool = vimdiff
	algorithm = patience
	compactionheuristic = true
	wsErrorHighlight = all
	colorMoved = default

[difftool]
	prompt = false

[gpg]
	format = ssh

[init]
	defaultBranch = main

[pull]
	rebase = true

[protocol]
	version = 2

[push]
	default = current

# [rerere]
# 	enabled = true
# 	autoUpdate = true

[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
[mergetool]
    prompt = true
